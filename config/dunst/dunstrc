# dunst solarized theme
# 
# adapted from https://github.com/tostiheld/dotfiles/blob/8ecef45ba05d374dec915c2931f0782af38620b0/.config/dunst/dunstrc

[global]
    font                 = Source Code Pro Regular 12px
    allow_markup         = yes
    plain_text           = no
    format               = "<b>%s</b>\n%b"
    transparency         = 0
    ignore_newline       = no
    show_indicators      = yes
    separator_color      = frame
    
    sort                 = yes
    alignment            = left
    bounce_freq          = 0
    word_wrap            = yes
    
    indicate_hidden      = yes
    show_age_threshold   = 60
    idle_threshold       = 120
    
    geometry             = "300x100-25+25"
    shrink               = no
    line_height          = 0
    notification_height  = 100
    separator_height     = 2
    padding              = 12
    horizontal_padding   = 12
    
    monitor              = 0
    follow               = mouse
    
    sticky_history       = yes
    history_length       = 20

    startup_notification = false
    dmenu                = /usr/bin/dmenu -p dunst:
    browser              = /usr/bin/google-chrome-stable

[frame]
    width = 1
    color = "#93a1a1"

[shortcuts]
    close     = ctrl+space
    close_all = ctrl+shift+space
    history   = ctrl+grave
    context   = ctrl+shift+period

[urgency_low]
    background = "#586e75"
    foreground = "#eee8d5"
    timeout = 10

[urgency_normal]
    background = "#073642"
    foreground = "#eee8d5"
    timeout = 5

[urgency_critical]
    background = "#dc322f"
    foreground = "#eee8d5"
    timeout = 0
