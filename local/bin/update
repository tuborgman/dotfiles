#!/bin/sh
#
# My system update script

run() {
  echo ""
  echo "> $@"
  echo ""
  $@
}

update_pacman() {
  echo "Updating pacman..."

  run pacman -Syu --noconfirm
}

update_pacaur() {
  echo "Updating pacaur..."

  run pacaur -Syu --noconfirm
}

update_dotfiles() {
  echo "Updating dotfiles..."

  run pushd $HOME/.dotfiles
  run git pull
  run rcup -v
  run popd
}

update_brain() {
  echo "Updating brain..."

  run pushd $HOME/dev/brain
  run git pull
  run popd
}

run_updates() {
  update_pacman
  update_pacaur
  update_dotfiles
  update_brain
}

run_updates
