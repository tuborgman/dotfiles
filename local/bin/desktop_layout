#!/bin/sh

xrandr --output DVI-D-0 --mode 1920x1080 --pos 0x232 --rotate left \
       --output HDMI-0 --primary --mode 2560x1440 --pos 1080x0 --rotate left \
       --output DVI-I-1 --off --output DVI-I-0 --off --output DP-1 --off \
       --output DP-0 --mode 1920x1080 --pos 2520x232 --rotate right
