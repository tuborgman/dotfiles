#!/bin/sh

xrandr --output DP-3 --off --output DVI-I-0 --off \
       --output HDMI-0 --primary --mode 2560x1440 --pos 1440x72 --rotate left \
       --output DP-5 --off --output DP-4 --mode 2560x1440 --pos 0x0 \
         --rotate right \
       --output DVI-I-1 --off --output DP-2 --off --output DP-1 --off \
         --output DP-0 --mode 2560x1440 --pos 2880x0 --rotate right
